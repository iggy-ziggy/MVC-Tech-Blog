<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Blog:</h3>

    <form class="form new-project-form update-form">
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="blog-text">text:</label>
        <textarea class="form-input" id="blog-text" name="blog-text">{{text}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/update.js"></script>