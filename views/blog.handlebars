<div class="text-center">
  <div id="blog-post">
    <h2>{{title}}</h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p>
      {{text}}
    </p>
  </div>
  {{!-- <input type="hidden" name="post-id" id= "post-id" value="{{id}}"> --}}
  {{#if logged_in}}
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="blog-comment">add a comment</label>
      <input class="form-input" type="text" id="blog-comment" name="blog-comment">
    </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" id="comment-submit-btn">submit</button>
  </div>
  </form>
  {{else}}
  <a href="/login" id="login-alert">Please log in to leave a comment</a>
  {{/if}}
  
  <div id="comment-block">
    {{#if comments.length}}
    <h3>Comments:</h3>

      {{#each comments as |comment|}}
      <div class="comment-card">
        <p id="comment-card-text">{{comment.text}}</p>
        <p id="comment-card-name">Posted by: {{user.name}}</p>
        <p id="comment-card-date">on {{format_date date_created}}</p>
      </div>
      {{/each}}
    {{else}}
      <div>
        <p>No comments yet</p>
      </div>
    {{/if}}
  </div>
</div>

<script src="/js/comment.js"></script>
